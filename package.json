{
  "name": "metrics-runner",
  "version": "1.0.0",
  "description": "Daily metrics processor with TypeScript and Drizzle ORM",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "once": "tsx src/index.ts --once",
    "type-check": "tsc --noEmit",
    "install-deps": "yarn install"
  },
  "keywords": [
    "metrics",
    "drizzle",
    "typescript",
    "mysql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.6.0",
    "typescript": "^5.9.3"
  }
}
